{%- comment -%}
  Gift With Purchase section configuration.
  This section provides settings for GWP functionality and renders the GWP UI in the cart.
  Render the GWP snippet when this section is added to a template.
  The snippet will use this section's settings.
{%- endcomment -%}
{% render 'gift-with-purchase', section: section %}

{% schema %}
{
  "name": "t:names.gift_with_purchase",
  "settings": [
    {
      "type": "header",
      "content": "t:content.gwp_cart_threshold"
    },
    {
      "type": "checkbox",
      "id": "enabled",
      "label": "t:settings.gwp_enabled",
      "default": true,
      "info": "t:info.gwp_enabled"
    },
    {
      "type": "number",
      "id": "cart_threshold",
      "label": "t:settings.cart_threshold",
      "default": 50,
      "info": "t:info.cart_threshold"
    },
    {
      "type": "header",
      "content": "t:content.gwp_gifts"
    },
    {
      "type": "product_list",
      "id": "gift_products",
      "label": "t:settings.gift_products",
      "limit": 10,
      "info": "t:info.gift_products"
    },
    {
      "type": "header",
      "content": "t:content.gwp_vip"
    },
    {
      "type": "checkbox",
      "id": "vip_enabled",
      "label": "t:settings.vip_enabled",
      "default": false,
      "info": "t:info.vip_enabled"
    },
    {
      "type": "text",
      "id": "vip_tag",
      "label": "t:settings.vip_tag",
      "default": "VIP",
      "info": "t:info.vip_tag"
    }
  ],
  "presets": [
    {
      "name": "t:names.gift_with_purchase"
    }
  ]
}
{% endschema %}

